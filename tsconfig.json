{
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,   // support typesystem compatibility
      "resolveJsonModule": true,              // json imports
      "strictNullChecks": true,
      "pretty": true,
      "sourceMap": true,
      "allowJs": true,
      "target": "ES6",
      "outDir": "./dist",
      "baseUrl": "/",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      }
    },
    "include": ["lib/**/*.ts", "server.ts"],
    "exclude": ["node_modules", "dist/", "logs"]
  }