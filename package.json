{
  "name": "checkserv",
  "version": "1.0.0",
  "description": "Alert User by email when something goes wrong",
  "main": "server.ts",
  "scripts": {
    "build": "tsc",
    "test": "node ./dist/server.js",
    "stop": "forever stop ./dist/server.js",
    "restart": "forever restart ./dist/server.js",
    "start": "forever start ./config/forever.json",
    "dev": "nodemon --verbose",
    "lint": "tslint -p ./tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p ./tsconfig.json -c tslint.json --fix"
  },
  "author": "gpatruno",
  "license": "ISC",
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/node": "^18.11.2",
    "@types/node-cron": "^3.0.4",
    "@types/nodemailer": "^6.4.6",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "config": "^3.3.8",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.8.0",
    "path": "^0.12.7",
    "tcp-port-used": "^1.0.2",
    "winston": "^3.8.2"
  }
}
